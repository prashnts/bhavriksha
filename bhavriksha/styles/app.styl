@require './_mixins.styl'
@require 'jeet'

$font-stack = $verdana

html, body
  margin 0
  font-family $font-stack
  font-weight 200

header
  background #E4FCF9
  position relative
  display flex
  flex-direction column
  justify-content flex-start

  @media(min-width 1024px)
    position fixed
    max-width 350px
    height 100%

.logo
  padding 10px
  color #005689
  h1
    font-weight 500

button
  margin-top 0px
  button(#4B89AC)
  click-down()
  font-weight 200

  &:focus
    outline none

h1, p
  margin 0

.node
  circle
    cursor pointer
    stroke #666
    stroke-width 1.5px
  text
    font-size 14px
    fill #444

    &.sentiment
      font-size 11px
      font-family monospace

path
  &.link
    fill none
    stroke #ccc
    stroke-width 1.5px

.toolbar
  position absolute
  padding 10px
  border-radius 4px
  background #DDD
  border 1px solid #AAA
  display flex
  flex-direction column
  max-width 200px
  top 0
  left 0
  opacity 1
  transition opacity 0.2s, transform 0.2s
  transform scale(1, 1)

  span
    display flex
    flex-shrink 1
    font-family monospace
    margin-bottom 5px

  ul
    list-style-type none
    margin 0
    padding 0
    display flex
    flex-grow 1

    li
      width 20px
      height 20px
      line-height 16px
      padding 5px
      text-align center
      opacity 0.8
      font-size 12px
      font-family monospace
      overflow hidden
      position relative
      transition opacity 0.2s, height 0.2s, margin-top 0.2s
      flex-grow 1

      &[role="--"]
        background #E05E3A
        border-radius 0 4px 4px 0
      &[role="-"]
        background #EA7859
      &[role="0"]
        background #EDEDED
      &[role="+"]
        background #71D4E8
      &[role="++"]
        background #31BCD8
        border-radius 4px 0 0 4px

      &:hover
        opacity 1
        cursor pointer

      &:after
        content ' '
        background #000
        opacity 0.2
        position absolute
        width 100%
        height 3px
        left 0
        bottom 0
        transition height 0.2s

      &:active
        margin-top 2px
        height 18px
        &:after
          height 1px

      &.active
        &:after
          opacity 0.5

  &.hidden
    opacity 0
    transform scale(0, 0)

.sentence
  flex-grow 1
  display flex
  flex-direction column
  justify-content flex-end
  blockquote(#446491)
  padding 10px
  margin-bottom 0

  p
    margin-bottom 20px

  .emotionbar
    display flex
    margin-bottom 10px

    label
      align-items center
      button(#4B89AC)
      border-radius 0
      click-down()
      display flex
      flex-direction column
      font-size 12px
      justify-content center
      margin-right -1px
      overflow hidden
      padding 5px 10px
      position relative
      z-index 1
      font-weight 200

      img
        width 30px
        height 30px
        margin-bottom 5px

      &:first-child
        border-radius 4px 0 0 4px
      &:last-child
        border-radius 0 4px 4px 0

      span.bg
        absolute top left
        width 100%
        height 100%
        z-index -1

      input
        display none

        &:checked + span.bg
          background #9ac5ff

