@require './_mixins.styl'
@require 'jeet'


html, body
  margin: 0


.node
  circle
    cursor pointer
    fill #fff
    stroke steelblue
    stroke-width 1.5px
  text
    font-size 11px

path
  &.link
    fill none
    stroke #ccc
    stroke-width 1.5px

.toolbar
  position absolute
  padding 10px
  border-radius 4px
  background #FCFCFC
  border 1px solid
  display flex
  flex-direction column
  max-width 200px

  span
    display flex
    flex-shrink 1
    font-family monospace
    margin-bottom 5px

  ul
    list-style-type none
    margin 0
    padding 0
    display flex
    flex-grow 1

    li
      width 20px
      height 20px
      line-height 16px
      padding 5px
      text-align center
      opacity 0.8
      font-size 12px
      font-family monospace
      overflow hidden
      position relative
      transition opacity 0.2s
      flex-grow 1

      &[role="--"]
        background #E05E3A
        border-radius 0 4px 4px 0
      &[role="-"]
        background #EA7859
      &[role="0"]
        background #EDEDED
      &[role="+"]
        background #71D4E8
      &[role="++"]
        background #31BCD8
        border-radius 4px 0 0 4px

      &:hover
        opacity 1
        cursor pointer

      &:after
        content ' '
        background #000
        opacity 0.2
        position absolute
        width 100%
        height 3px
        left 0
        bottom 0
        transition height 0.2s

      &:active
        &:after
          height 1px

      &.active
        &:after
          opacity 0.5
